rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Stats: Anyone can read, anyone can increment
    match /stats/global {
      allow read: if true;
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['visitors', 'contributors', 'papersEngagement']);
    }

    function isSuperAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin';
    }
    
    // Configs: Anyone can read, only Super-Admins can write
    match /configs/{configId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Papers: Anyone can read ACTIVE papers only
    match /papers/{paperId} {
      allow read: if resource.data.status != 'deleted';
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (resource.data.metadata.uploadedBy == request.auth.uid || isSuperAdmin());
    }
    
    // Users: 
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isSuperAdmin());
      allow delete: if isSuperAdmin();
    }
  }
}
